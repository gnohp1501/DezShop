<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_selected="true">
        <shape>
            <solid android:color="@color/primary" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/primary" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_selected="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/primary" />
        </shape>
    </item>

    <item android:state_enabled="false" android:state_selected="true">
        <shape>
            <solid android:color="@color/gray" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/gray" />
        </shape>
    </item>

    <item android:state_enabled="false" android:state_selected="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/gray" />
        </shape>
    </item>

</selector>