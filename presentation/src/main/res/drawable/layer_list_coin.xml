<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thickness="50dp"
            android:useLevel="false">
            <solid android:color="#808080" />
        </shape>
    </item>

    <item
        android:bottom="30dp"
        android:left="30dp"
        android:right="30dp"
        android:top="30dp">
        <shape android:shape="oval">
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item
        android:bottom="165dp"
        android:left="75dp"
        android:right="75dp"
        android:top="165dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" />
                <size
                    android:width="200dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="165dp"
        android:left="75dp"
        android:right="75dp"
        android:top="165dp">
        <rotate android:fromDegrees="315">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" />
                <size
                    android:width="200dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>

</layer-list>